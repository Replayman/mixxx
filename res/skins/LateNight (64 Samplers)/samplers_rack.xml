  <WidgetGroup>
    <Layout>horizontal</Layout>
    <SizePolicy>me,max</SizePolicy>
    <Children>

      <WidgetStack currentpage="[LateNight],sampler_rows" persist="true">
        <Children>

          <!--4 Samplers -->
          <Template trigger="[LateNight],show_4samplers"  on_hide_select="1" src="skin:../LateNight/samplers/samplers_4decks.xml"/>

          <!--8 Samplers -->
          <WidgetGroup trigger="[LateNight],show_8samplers" on_hide_select="0">
            <Layout>vertical</Layout>
            <Children>
              <SingletonContainer trigger="[LateNight],show_8samplers">
                <ObjectName>Samplers_1-8</ObjectName>
              </SingletonContainer>
            </Children>
          </WidgetGroup>

          <!--16 Samplers -->
          <WidgetGroup trigger="[LateNight],show_16samplers" on_hide_select="1">
            <Layout>vertical</Layout>
            <Children>
              <SingletonContainer>
                <ObjectName>Samplers_1-8</ObjectName>
              </SingletonContainer>
              <Template src="skin:../LateNight/samplers/samplers_16decks.xml"/>
            </Children>
          </WidgetGroup>

          <!--64 Samplers -->
          <WidgetGroup trigger="[LateNight],show_64samplers" on_hide_select="1">
            <ObjectName>SamplerRows</ObjectName>
            <Layout>vertical</Layout>
            <Children>
              <Template src="skin:/samplers/samplers_64decks.xml"/>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetStack>

    </Children>
    <Connection>
      <ConfigKey>[Samplers],show_samplers</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>
  </WidgetGroup>
